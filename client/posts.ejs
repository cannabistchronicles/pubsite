<html>
    <%- include('modules/dependancies.html') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pure/1.0.0/grids-responsive.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/item.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/label.min.css">
    <link rel="stylesheet" href="style/posts.css">
<body>
    <%- include('modules/header.html') %>
    <div class="container">
        <div class="ui divided items pure-g">
            <% for(i=0;i<blogs.length;i++) { %>
            <div class="item pure-u-1-2 pure-u-md-1-2 pure-u-lg-1-3 pure-u-xl-1-3">
                <a href="post?id=<%- blogs[i].id %>" class="image">
                    <img src="/images/<%- blogs[i].main_img %>">
                </a>
                <div class="content">
                    <a href="post?id=<%- blogs[i].id %>" class="header"><%- blogs[i].title %></a>
                    <div class="meta">
                        <span><%- new Date(parseInt(blogs[i].post_date)).toLocaleDateString() %></span>
                    </div>
                    <div class="description">
                        
                            <form method="post" action="/post/delete/"><input name="id" type="hidden" value="<%- blogs[i].id %>"><button>Delete</button></form>
                        <p><%- blogs[i].preview %></p>
                    </div>
                    <div class="extra">
                        <% for (e=0; e < blogs[i].tags.length; e++) { %> 
                            <div class="ui label black"><%- blogs[i].tags[e] %></div>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

</body>